= content_for :main_header do
  %h1= current_user.name

.well
  %p.pull-right
    = link_to 'Edit', edit_profile_path, :class => 'btn success'
    - if current_user.has_role? :instructor
      = link_to 'Delete my account', destroy_profile_path, :confirm => 'Are you sure you want to delete your account? This action will also destroy all your classes and scenarios.', :class => 'btn danger'
    - else
      = link_to 'Delete my account', destroy_profile_path, :confirm => 'Are you sure?', :class => 'btn danger'

%table
  %tr
    %td
      %strong Location:
    %td= location_for current_user
  %tr
    %td
      %strong Login:
    %td= current_user.login
  %tr
    %td
      %strong E-Mail:
    %td= mail_to current_user.email
  - if current_user.phone.present?
    %tr
      %td
        %strong Phone:
      %td= current_user.phone
  %tr
    %td
      %strong Time Zone:
    %td= current_user.time_zone

  %tr
    %td
      %strong Member since:
    %td= current_user.created_at.to_date.to_formatted_s(:long)
