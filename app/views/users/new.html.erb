
<table border="0" cellpadding="0" cellspacing="0">
	<tr >
		<td valign="middle"><img src="/images/icon_users_45.png" alt = "Users Icon"/></td>
		<td width="10">&nbsp;</td>
		<td valign="bottom"><h1>New user</h1></td>
	</tr>
</table>

<%= error_messages_for 'user' %>
	
<% form_for :user, :url => users_path do |f| %>


	<!--[form:user]-->
	<p><label for="login">Login</label><br/>
	<%= f.text_field :login  %></p>

	<p><label for="first_name">First name</label><br/>
	<%= f.text_field :first_name  %></p>

	<p><label for="last_name">Last name</label><br/>
	<%= f.text_field :last_name  %></p>

	<p><label for="email">Email</label><br/>
	<%= f.text_field :email  %></p>
		
	<p><label for="password">New Password</label><br/>
	<%= f.password_field :password, :size=>20,  :value=>""  %></p>
		
	<p><label for="password_confirmation">Confirm New Password</label><br/>
	<%= f.password_field :password_confirmation, :size=>20,  :value=>""   %></p>

	<p>Role:<br/>
	<%= collection_select(:user, :role_id, @userRoles, :id, :name)%>
	</p>
	
	<% if current_user.role.name="superadmin" %>
		<p>Institution:<br/>
		<%= collection_select(:user, :institution_id, Institution.find(:all), :id, :name)%>
		</p>
	<%end %>


	<!--[eoform:user]-->
  	<%= submit_tag "Create", :class=>'submitButton' %>
  	
<% end %>

<%= link_to 'Back', :action => 'list' %>

