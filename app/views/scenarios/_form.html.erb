<% form_for(@scenario) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :scenario_id %><br />
    <%= f.text_field :scenario_id %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :movie_url %><br />
    <%= f.text_field :movie_url %>
  </div>
  <div class="field">
    <%= f.label :thumbnail_url %><br />
    <%= f.text_field :thumbnail_url %>
  </div>
  <div class="field">
    <%= f.label :level %><br />
    <%= f.text_field :level %>
  </div>
  <div class="field">
    <%= f.label :inputs_visible %><br />
    <%= f.check_box :inputs_visible %>
  </div>
  <div class="field">
    <%= f.label :inputs_enabled %><br />
    <%= f.check_box :inputs_enabled %>
  </div>
  <div class="field">
    <%= f.label :faults_visible %><br />
    <%= f.check_box :faults_visible %>
  </div>
  <div class="field">
    <%= f.label :faults_enabled %><br />
    <%= f.check_box :faults_enabled %>
  </div>
  <div class="field">
    <%= f.label :longterm_start_date %><br />
    <%= f.date_select :longterm_start_date %>
  </div>
  <div class="field">
    <%= f.label :longterm_stop_date %><br />
    <%= f.date_select :longterm_stop_date %>
  </div>
  <div class="field">
    <%= f.label :allow_longterm_date_change %><br />
    <%= f.check_box :allow_longterm_date_change %>
  </div>
  <div class="field">
    <%= f.label :realtime_start_datetime %><br />
    <%= f.datetime_select :realtime_start_datetime %>
  </div>
  <div class="field">
    <%= f.label :allow_realtime_datetime_change %><br />
    <%= f.check_box :allow_realtime_datetime_change %>
  </div>
  <div class="field">
    <%= f.label :valve_info_enabled %><br />
    <%= f.check_box :valve_info_enabled %>
  </div>
  <div class="field">
    <%= f.label :short_description %><br />
    <%= f.text_field :short_description %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :goal %><br />
    <%= f.text_area :goal %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
