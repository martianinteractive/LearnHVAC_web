= content_for :main_header do
  %h1 New Variable

= render :partial => "admins/scenarios/scenario_menu"

= form_for([@scenario, @scenario_variable], :url => admins_scenario_variables_path(@scenario), :method => :post) do |f|
  = render :partial => "form", :locals => { :f => f }
  .actions
    = submit_tag "Create", :class => 'btn primary'
    &nbsp;or&nbsp;
    = link_to 'Cancel', :back, :class => 'btn'
