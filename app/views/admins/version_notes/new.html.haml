#tabs
  %ul
    %li.ui-tabs-selected= link_to "Version Note", new_admins_master_scenario_version_note_path(@master_scenario)
  
  #page_header
    #subject_info
      %h2= @master_scenario.name
      .subject_details Please enter a brief description of the changes you've just entered.
  
  - form_for (@version_note, :url => admins_master_scenario_version_note_path(@master_scenario), :method => :post) do |f|
    = f.error_messages
  
    .field
      = f.label :description
      = f.text_area :description

    .actions
      = f.submit
    