= content_for :main_header do
  %h1= @master_scenario.name
  %p= @master_scenario.description
= render :partial => 'master_scenario_menu'

%table
  %tr
    %td
      %strong Total Variables:
    %td= @master_scenario.variables.size
  %tr
    %td
      %strong Author:
    %td= @master_scenario.user.name
  %tr
    %td
      %strong Client Version:
    %td
      - if @master_scenario.client_version
        = link_to @master_scenario.client_version.version, admins_settings_client_version_path(@master_scenario.client_version)
      - else
        %em No client selected.
  %tr
    %td
      %strong Tags:
    %td= @master_scenario.tag_list
  %tr
    %td
      %strong Created on:
    %td= @master_scenario.created_at.to_formatted_s(:long)
  %tr
    %td
      %strong Last updated:
    %td= @master_scenario.updated_at.to_formatted_s(:long)
