- content_for :head do
  - javascript_tag do
    :plain
      $(document).ready(function(){

        $("#master_scenario_tag_list").autocomplete({
          source: "#{admins_tags_path}",
          select: function(event, ui) { return false; },
          focus: function(event, ui) { return false; }
        });

        $("#master_scenario_tag_list" ).bind("autocompleteselect",
          function(event, ui) {
            _tags = $(this).val().replace(/ /g,'').split(",")
            _tags[_tags.length - 1] = ui.item.value + ", "
            $(this).val(_tags.join(", "))
        });
      });

= f.error_messages

%fieldset
  .clearfix
    = f.label :name
    .input= f.text_field :name, :class => 'xxlarge'

  .clearfix
    = f.label :description
    .input= f.text_area :description, :rows => "3", :class => 'xxlarge'


  .clearfix
    = f.label :desktop_id, "Client Version"
    .input= f.select :desktop_id, ClientVersion.all.collect { |cv| [cv.version, cv.id] }, :prompt => "Please select...", :class => 'xxlarge'


  .clearfix
    = f.label :tag_list, "Tags"
    .input= f.text_field :tag_list, :class => 'xxlarge'

    Comma separated.

  .actions
    = f.submit 'Save', :class => 'btn primary'
    &nbsp;or&nbsp;
    = link_to 'Cancel', admins_master_scenarios_path, :class => 'btn'
