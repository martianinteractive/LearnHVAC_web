= content_for :main_header do
  %h1 Master Scenarios

%p.pull-right= link_to 'New Master Scenario', new_admins_master_scenario_path, :class => 'btn'

%table.zebra-striped
  %thead
    %tr
      %th Name
      %th Author
      %th Client Version
  %tbody
    - @master_scenarios.each do |scenario|
      %tr
        %td= link_to scenario.name, admins_master_scenario_path(scenario)
        %td= scenario.user.name
        %td= link_to scenario.client_version.version, admins_settings_client_version_path(scenario.client_version) if scenario.client_version

= will_paginate @master_scenarios
