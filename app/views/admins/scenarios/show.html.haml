#tabs
  %ul
    %li.ui-tabs-selected= link_to "Instructor Scenarios", admins_scenarios_path
    %li= link_to "New Scenario", new_admins_scenario_path
    
  = render :partial => "scenario_menu"

  #inner_column
    %table
      %tr
        %th Author:
        %td= @scenario.user.name
      %tr
        %th Created on:
        %td= @scenario.created_at.to_formatted_s(:long)
      %tr
        %th Client Version:
        %td
          - if @scenario.client_version
            = link_to @scenario.client_version.version, admins_settings_client_version_path(@scenario.client_version)
          - else
            %em No client selected.
      %tr
        %th Level:
        %td= @scenario.level
      %tr
        %th Inputs visible:
        %td= @scenario.inputs_visible
      %tr
        %th Inputs enabled:
        %td= @scenario.inputs_enabled
      %tr
        %th Faults visible:
        %td= @scenario.faults_visible
      %tr
        %th Faults enabled:
        %td= @scenario.faults_enabled
      %tr
        %th Longterm start date:
        %td= @scenario.longterm_start_date
      %tr
        %th Longterm stop date:
        %td= @scenario.longterm_stop_date
      %tr
        %th Allow longterm date change:
        %td= @scenario.allow_longterm_date_change
      %tr
        %th Realtime start datetime:
        %td= @scenario.realtime_start_datetime
      %tr
        %th Allow realtime datetime change:
        %td= @scenario.allow_realtime_datetime_change
      %tr
        %th Valve info enabled:
        %td= @scenario.valve_info_enabled
      %tr
        %th Student debug access:
        %td= @scenario.student_debug_access
      %tr
        %th Short description:
        %td= @scenario.short_description
      %tr
        %th Goal:
        %td= @scenario.goal
