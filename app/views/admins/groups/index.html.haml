#tabs
  %ul
    %li.ui-tabs-selected= link_to "Classes", admins_classes_path
    %li= link_to "New Class", new_admins_class_path
  
  %br
  = grid(@groups_grid, :show_filters => :always) do |g|
    - g.column :name => 'Name' do |group|
      - link_to group.name, admins_class_path(group)
    - g.column :name => 'Instructor' do |group|
      - link_to group.creator.name, admins_user_path(group.creator, :role => group.creator.role)
    - g.column :name => 'Instructor' do |group|
      - group.members.count