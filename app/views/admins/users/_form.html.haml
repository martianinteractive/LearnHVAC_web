- content_for :head do
  = render :partial => 'shared/user_form_js', :locals => { :u => @user }

= error_messages_for 'user'
.clearfix
  = f.label :login
  .input= f.text_field :login, :class => 'xxlarge'

.clearfix
  = f.label :first_name, "First Name"
  .input= f.text_field :first_name, :class => 'xxlarge'

.clearfix
  = f.label :last_name, "Last Name"
  .input= f.text_field :last_name, :class => 'xxlarge'

.clearfix
  = f.label :country
  .input= f.country_select :country, ['United States', 'Canada'], :class => 'xxlarge'

.clearfix#states
  = f.label :state, "State/Region"
  .input= f.text_field :state, :class => 'xxlarge'

.clearfix
  = f.label :city
  .input= f.text_field :city, :class => 'xxlarge'

.clearfix
  = f.label :email
  .input= f.text_field :email, :class => 'xxlarge'

.clearfix
  = f.label :phone
  .input= f.text_field :phone, :class => 'xxlarge'

.clearfix
  = f.label :password
  .input= f.password_field :password, :size => 20,  :value => "", :class => 'xxlarge'

.clearfix
  = f.label :password_confirmation, "Password Confirmation"
  .input= f.password_field :password_confirmation, :size=>20,  :value=>"", :class => 'xxlarge'

.clearfix
  = f.label :role
  .input= f.select :role_code, User::ROLES.keys.collect {|k| [k.to_s.gsub("_", " ").capitalize, User::ROLES[k]]}, {}, :class => 'xlarge'

#students
  .clearfix
    = label_tag :instructor
    .input= select_tag :instructor, options_from_collection_for_select(@instructors, "id", "name"),{:include_blank => true, :class => 'xlarge'}
  .clearfix
    = f.label :group
    #group_div
      .input= f.select :group_code,[], {}, :class => 'xlarge'
.clearfix
  = f.label :institution_id
  .input= f.collection_select :institution_id, Institution.all, :id, :name, {}, :class => 'xlarge'

.clearfix
  = f.label :time_zone
  .input= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, {}, :class => 'xlarge'

.clearfix
  = f.label :enabled
  .input
    %ul.inputs-list
      %li
        %label= f.check_box :enabled

- if @user.has_role?(:student) or @user.has_role?(:instructor) or @user.has_role?(:student)
  .clearfix
    = f.label :list_directory, "Listed in the community directory?"
    .input
      %ul.inputs-list
        %li
          %label= f.check_box :list_directory
