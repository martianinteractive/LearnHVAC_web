#tabs
  %ul
    %li= link_to @master_scenario.name, admins_master_scenario_path(@master_scenario) 
    %li= link_to "System Variables", admins_master_scenario_system_variables_path(@master_scenario)
    %li= link_to 'New System Variable', new_admins_master_scenario_system_variable_path(@master_scenario)
    
  #page_header
    #subject_actions
      = link_to 'Edit', edit_admins_master_scenario_system_variable_path(@master_scenario, @system_variable)
      &nbsp;
      = link_to 'Delete', admins_master_scenario_system_variable_path(@master_scenario, @system_variable), :confirm => 'Are you sure?', :method => :delete
      
    #subject_info
      %h2= @system_variable.name
      .subject_details=@system_variable.display_name

  #location.ui-widget.ui-widget-content.ui-corner-all
    %h4 Description
    %p= @system_variable.description
    %h4 Notes
    %p= @system_variable.notes
    
  #inner_column
    %table
      %tr
        %th Index:
        %td= @system_variable.index
      %tr
        %th I/O type:
        %td= @system_variable.io_type
      %tr
        %th Component:
        %td= @system_variable.component
      %tr
        %th Low value:
        %td= @system_variable.low_value
      %tr
        %th Initial value:
        %td= @system_variable.initial_value
      %tr
        %th High value:
        %td= @system_variable.high_value
      %tr
        %th Unit SI:
        %td= @system_variable.unit_si
      %tr
        %th Initial IP:
        %td= @system_variable.unit_ip
      %tr
        %th SI to IP:
        %td= @system_variable.si_to_ip
      %tr
        %th Fault?:
        %td= @system_variable.is_fault
      %tr
        %th Left label:
        %td= @system_variable.left_label
      %tr
        %th Right label:
        %td= @system_variable.right_label
      %tr
        %th Subsection:
        %td= @system_variable.subsection
      %tr
        %th Zone position:
        %td= @system_variable.zone_position
      %tr
        %th Is percentage:
        %td= @system_variable.is_percentage
      %tr
        %th Fault widget type:
        %td= @system_variable.fault_widget_type
      %tr
        %th Lock version:
        %td= @system_variable.lock_version
      %tr
        %th Notes sequence:
        %td= @system_variable.node_sequence
