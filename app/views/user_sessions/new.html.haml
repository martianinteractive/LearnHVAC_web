- form_for @user_session do |f|
  %center
    #loginContent
      #loginWelcome
        %p
          Welcome to the Learn HVAC Instructor Site
        %p
          This site provides management functions for the Learn HVAC suite of tools. It allows instructors
          to manage student access to Learn HVAC and the scenarios provided within the tool.
      #loginArea
        #loginForm.form
          %table{ :border => "0" }
            %tr
              %td
                %img{ :src => "/images/user.png" } &nbsp;&nbsp;
              %td
                %b Instructor login
          %table{ :cellspacing => "0", :border => "0", :cellpadding => "0" }
            %tr
              %td{ :valign => "top", :align => "left" }
                = f.label :login, "Login:"
              %td{ :valign => "top", :align => "left" }
                = f.text_field :login, :size=>15
                %br
            %tr
              %td{ :valign => "top", :align => "left" }
                = f.label :password, "Password:", :style => "margin-right:10px;"
                %br
              %td{ :valign => "top", :s => "s", :align => "left" }
                = f.password_field :password, :size=>15
                %br
            %tr
              %td
              %td{ :align => "left" }= submit_tag "Log In"
          %p
            If you do not have an account and would like to have one set up, please
            %a{ :href => "mailto:jjd@deringergroup.com" }
            contact us
          %p= link_to "Forgot your password?", new_password_reset_path
