%h2= "#{@scenario.name.capitalize} Simulation Variables"
%p
  = link_to 'Back', directory_institution_scenario_path(@institution, @scenario)
%hr

%table
  %tr
    = sort_header_tag('component_code', :title => 'Component')
    %th Fault
    = sort_header_tag('name', :title => 'Name')
    %th Disp. Name
    = sort_header_tag('io_type', :title => 'Type')
    %th Low
    %th Initial
    %th High
    %th Unit SI
    %th Unit IP
    %th SI to IP
  - @variables.each do |variable|
    %tr
      %td= variable.component
      %td 
      %td= link_to variable.name, directory_institution_scenario_variable_path(@institution, @scenario, variable)
      %td= variable.display_name
      %td= variable.io_type.to_s.upcase
      %td= variable.low_value
      %td= variable.initial_value
      %td= variable.high_value
      %td= variable.unit_si
      %td= variable.unit_ip
      %td= variable.si_to_ip
%br
= will_paginate @variables
