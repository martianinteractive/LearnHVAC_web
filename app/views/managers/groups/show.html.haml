%h2= @group.name.capitalize
%p
  = link_to 'Edit Group', edit_managers_group_path(@group)
  &nbsp;|&nbsp;
  = link_to 'Delete Group', managers_group_path(@group), :confirm => 'Are you sure?', :method => :delete
  &nbsp;|&nbsp;
  = link_to 'Back', managers_groups_path
%hr

%p
  %b Code:
  = @group.code

%p
  %b Lead by:
  = link_to @group.instructor.name, managers_instructor_path(@group.instructor)

%p
  %b Invitation URL:
  = membership_register_url(@group.code)

%h3 Students
- if @group.students.any?
  %table
    %tr
      %th Name
      %th Email
      - for student in @group.students
        %tr
          %td= student.name
          %td= student.email
          %td= link_to "Remove from group", managers_group_membership_path(@group, @group.memberships.where(:student_id => student.id).first), :confirm => 'Are you sure?', :method => :delete

- else
  %p There are no students on this group.

%h3 Group Scenarios

- if @group.group_scenarios.any?
  %p Group members have access to the following scenarios.
  %table
    %tr
      %th Scenario
      %th Description

      - for scenario in @group.scenarios
        %tr
          %td= link_to scenario.name, managers_scenario_path(scenario)
          %td= scenario.description
- else
  %p There are no scenarios on this group.
