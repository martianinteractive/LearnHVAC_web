= f.error_messages

.clearfix
  = f.label :name
  .input= f.text_field :name, :class => 'xxlarge'

- if @group.new_record?
  .clearfix
    = f.label :creator
    .input= f.select :creator_id, current_user.institution.users.instructor.collect {|user| [ user.name, user.id ] }, { :prompt => 'Please select ...'}, :class => 'xxlarge'

.clearfix
  = f.label :goal
  .input= f.text_area :goal, :rows => '3', :class => 'xxlarge'

.clearfix
  = f.label :scenarios
  .input= f.collection_select :scenario_ids, @scenarios, :id, :name, {}, :multiple => true, :class => 'xxlarge'
