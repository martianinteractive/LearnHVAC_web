- content_for :js_templates do
  :plain
    $(document).ready(function() { 
      $("#group_instructor_id").change(function() { 
        $.get("#{list_managers_scenarios_path}", { user_id: $(this).val() }, function(r) { $("#group_scenario_ids_").html(r) }) 
      }) 
    })

#tabs
  %ul
    %li= link_to "Groups", managers_groups_path
    %li.ui-tabs-selected= link_to "New Group", new_managers_group_path
    
  - form_for(@group, :url => managers_groups_path, :method => :post) do |f|
    = f.error_messages

    .field
      = f.label :name
      = f.text_field :name

    .field 
      = f.label :instructor
      = f.select :instructor_id, current_user.institution.users.instructor.collect {|user| [ user.name, user.id ] }, { :prompt => 'Please select ...'}

    .field
      = f.label :scenarios
      %br
      = select_tag "group[scenario_ids][]", options_from_collection_for_select(@instructor.scenarios, :id, :name, @group.scenario_ids.map(&:to_i) || []), :multiple => true

    .actions
      = submit_tag "Create"
      &nbsp;or&nbsp;
      = link_to 'Cancel', :back
