%h2= "#{@scenario.name.capitalize} System Variables"
= link_to 'New Variable', new_admin_scenario_scenario_variable_path(@scenario)
%hr

%table
  %tr
    = sort_header_tag('component_code', :title => 'Component')
    %th Fault
    = sort_header_tag('name', :title => 'Name')
    %th Disp. Name
    = sort_header_tag('type_code', :title => 'Type')
    = sort_header_tag('min_value', :title => 'Min.')
    = sort_header_tag('default_value', :title => 'Default')
    = sort_header_tag('max_value', :title => 'Max.')
    %th Unit SI
    %th Unit IP
    %th SI to IP
  - @scenario_variables.each do |scenario_system_variable|
    %tr
      %td= scenario_system_variable.component
      %td fault
      %td= scenario_system_variable.name
      %td= scenario_system_variable.display_name
      %td= scenario_system_variable.io_type.to_s.upcase
      %td= scenario_system_variable.min_value
      %td= scenario_system_variable.default_value
      %td= scenario_system_variable.max_value
      %td= scenario_system_variable.unit_si
      %td= scenario_system_variable.unit_ip
      %td= scenario_system_variable.si_to_ip
      %td= link_to 'Show', admin_scenario_scenario_variable_path(@scenario, scenario_system_variable)
      %td= link_to 'Edit', edit_admin_scenario_scenario_variable_path(@scenario, scenario_system_variable)
      %td= link_to 'Destroy', admin_scenario_scenario_variable_path(@scenario, scenario_system_variable), :confirm => 'Are you sure?', :method => :delete
%br
= will_paginate @scenario_variables
