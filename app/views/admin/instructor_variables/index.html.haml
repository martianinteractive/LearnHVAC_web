%h2= "Listing #{@instructor.name.capitalize} System Variables"
%table
  %tr
    %th Comp
    %th fault
    %th Name
    %th Display Name
    %th Description
    %th Type
    %th Min
    %th Default
    %th Max
    %th Unit SI
    %th Unit IP
    %th SI to IP
    %th Disabled
  - @instructor_variables.each do |instructor_variable|
    %tr
      %td comp
      %td fault
      %td= instructor_variable.name
      %td= instructor_variable.display_name
      %td= instructor_variable.description
      %td= instructor_variable.io_type
      %td= instructor_variable.min_value
      %td= instructor_variable.default_value
      %td= instructor_variable.max_value
      %td= instructor_variable.unit_si
      %td= instructor_variable.unit_ip
      %td= instructor_variable.si_to_ip
      %td= instructor_variable.global_disable
      %td= link_to 'Show', admin_user_instructor_variable_path(@instructor, instructor_variable)
      %td= link_to 'Edit', edit_admin_user_instructor_variable_path(@instructor, instructor_variable)
      %td= link_to 'Destroy', admin_user_instructor_variable_path(@instructor, instructor_variable), :confirm => 'Are you sure?', :method => :delete
%br
= will_paginate @instructor_variables
%br
= link_to 'New System Var', new_admin_user_instructor_variable_path(@instructor)
