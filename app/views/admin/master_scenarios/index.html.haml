%h2 Master Scenarios
%p
  = link_to 'New master_scenario', new_admin_master_scenario_path
%hr

%table
  %tr
    %th Name
    %th Author
    %th
  - @master_scenarios.each do |master_scenario|
    %tr
      %td= link_to master_scenario.name, admin_master_scenario_path(master_scenario)
      %td= master_scenario.user.name
      %td 
        = link_to "Clone", clone_admin_master_scenario_path(master_scenario), :method => :post
        &nbsp;|&nbsp;
        = link_to "System vars.", admin_master_scenario_system_variables_path(master_scenario)
%br
= will_paginate @master_scenarios

