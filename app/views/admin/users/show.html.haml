%h2= @user.name

%p 
  = link_to 'Edit', edit_admin_user_path(@user, "role" => params[:role])
  &nbsp;|&nbsp;
  = link_to 'Delete', admin_user_path(@user, "role" => params[:role]), :confirm => 'Are you sure?', :method => :delete
%hr

%p
  %b Login:
  = @user.login
%p
  %b Role:
  = @user.role
%p
  %b Institution:
  = link_to @user.institution.name, admin_institution_path(@user.institution) if @user.institution
%p
  %b First Name:
  = @user.first_name.capitalize
%p
  %b Last Name:
  = @user.last_name.capitalize
%p
  %b E-Mail:
  = @user.email
%p
  %b Status:
  = @user.enabled? ? "Enabled" : "Disabled"

%p
  %b Created on:
  = @user.created_at.to_formatted_s(:long)
