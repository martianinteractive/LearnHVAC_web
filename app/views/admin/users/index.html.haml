- content_for :subnav do
  %h2
    Manage Users
  .navigation
    %ul
      %li
        = link_to 'New User', new_admin_user_path

%table
  %tr
    %th
    %th
      Institution
    %th
      Last Name
    %th
      First Name
    %th
      Login
    %th
      Role
    %th
      e-Mail
    %th{ :colspan => "4" }

    - for user in @users
      %tr{ :class => cycle("lightRow", "darkRow") }
        %td
        %td= "Institution" #user.institution.name
        %td= h user.last_name
        %td= h user.first_name
        %td
          %b= h user.login
        %td= h user.role.to_s.capitalize
        %td= h user.email
        %td= link_to 'Show', admin_user_path(user)
        %td= link_to 'Edit', edit_admin_user_path(user)
        %td= link_to 'Destroy', admin_user_path(user), :confirm => 'Are you sure?', :method => :delete
