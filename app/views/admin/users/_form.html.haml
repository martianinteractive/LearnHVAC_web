= error_messages_for 'user'
.field
  = f.label :login
  = f.text_field :login

.field
  = f.label :first_name, "First Name"
  = f.text_field :first_name

.field
  = f.label :last_name, "Last Name"
  = f.text_field :last_name

.field
  = f.label :email
  = f.text_field :email

.field
  = f.label :password
  = f.password_field :password, :size=>20,  :value=>""

.field
  = f.label :password_confirmation, "Password Confirmation"	
  = f.password_field :password_confirmation, :size=>20,  :value=>""

.field
  = f.label :role
  = f.select(:role_code, User::ROLES.keys.collect{|k| [k.to_s.capitalize, User::ROLES[k]]})

.field
  = f.label :institution_id
  = f.collection_select(:institution_id, Institution.all, :id, :name)

.field
  = f.label :enabled
  = f.check_box :enabled