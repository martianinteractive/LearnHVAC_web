<% autocomplete ||= false %>
<% javascript_tag do %>
 
 $(document).ready(function(){
	form = { 
	  states: function() {
	    $.get('/states', { state: $("#user_country").val(), current: '<%= u.state %>' }, function(data) { $('#states').html(data); })
	  }
	}
	
  $(function() { form.states(); })

  $('#user_country').change(function() {form.states()});
  
  <% if autocomplete %>
    $(function() {
      $("#user_institution_name").autocomplete({ source: "/colleges"});
    });
	<% end %>
	
});
<% end %>