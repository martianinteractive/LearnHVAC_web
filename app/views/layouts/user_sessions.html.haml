%html
  %head
    %title
      ePrimer Management Console:
      = controller.action_name
    %meta{ :content => "no-cache", "http-equiv" => "cache-control" }
    = stylesheet_link_tag 'scaffold'
  %body
    #wrapper
      #header
        %img{ :src => "/images/header_bar.png", :alt => "HVAC ePrimer logo" }
      %div{ :style => "background: url(/images/blank_button_bar.png) repeat-x; height:32px;" }
        \&nbsp;
    #content
      - if flash[:notice]
        %div{ :style => "border:1px solid green; color:green; padding:10px;margin-bottom:10px;" }
          = flash[:notice]
      - if flash[:message]
        %div{ :style => "border:1px solid #009900; color:#009900; padding:10px;margin-bottom:10px;" }
          = flash[:message]
      - if flash[:warning]
        %div{ :style => "background-color:#CC0000;color:white; padding:10px; margin-bottom:10px;" }
          = flash[:warning]
      %br
      = yield
    %br
    = render(:partial=>"shared/footer")
