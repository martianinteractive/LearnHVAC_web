%html
  %head
    = csrf_meta_tag
    = javascript_include_tag 'jquery-1.4.min'
    = javascript_include_tag 'rails'
    = javascript_include_tag 'jquery-ujs/rails'
    %title
      LearnHVAC Management Console:
      = controller.action_name
  %body
    #wrapper
      #header
        = image_tag("header_bar.png", :alt => "HVAC ePrimer logo")
      %div.sub_nav
    #content
      - if flash[:notice]
        %div.notice
          = flash[:notice]
      - if flash[:message]
        %div.notice.message
          = flash[:message]
      - if flash[:warning]
        %div.notice.warning
          = flash[:warning]
      %br
      = yield
    %br
    = render(:partial=>"shared/footer")
