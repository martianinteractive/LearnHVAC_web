%html
  %head
    %meta{ "http-equiv" => "Content-type", :content => "text/html; charset=utf-8" }
    %title
      = yield :title
      Learn HVAC Administration
    = stylesheet_link_tag "screen.css"
    = stylesheet_link_tag "print.css", :media => "print"
    = javascript_include_tag :defaults, 'datepicker', 'jquery.bgiframe', 'jquery.dimensions', 'jquery.delegate', 'jquery.tooltip', 'jquery.delay', 'locales'
    /[if IE]
      = stylesheet_link_tag 'ie.css'
  %body.bp
    .header
      .content
        %h1.siteTitle
          = link_to image_tag('logo.png'), root_path
        %ul.global_nav
          - if logged_in?
            %li.username
              Welcome Joe Doe
            - if current_user.admin?
              %li
                = link_to 'Admin Dashboard', admin_dashboard_path
          %li
            = link_to 'Root', root_path
    .shadow
      .subnav
        - if logged_in?
          = yield :subnav
      .main
        = display_flash
        = yield
        .clear
    .footer
      .content
        %ul.nav
          %li
            = link_to 'Contact Us', '/contact_messages/new', :rel => "nofollow"
          %li
            = link_to 'Terms', '/pages/terms-of-use', :rel => "nofollow"
        %p.attribution
          Copyright
