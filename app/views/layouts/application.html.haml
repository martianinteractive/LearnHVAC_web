%html
  %head
    %meta{ "http-equiv" => "Content-type", :content => "text/html; charset=utf-8" }
    %title
      = yield :title
      Learn HVAC Administration
    = stylesheet_link_tag "emastic/reset-min", "emastic/type-min", "formy/form.css", "common", "jquery", "jquery.tooltip", "application"
    = javascript_include_tag :defaults, 'datepicker', 'jquery.bgiframe', 'jquery.dimensions', 'jquery.delegate', 'jquery.tooltip', 'jquery.delay', 'locales'
    /
      [if IE]><haml:loud> stylesheet_link_tag 'emastic/ie-min' </haml:loud><![endif]
    /
      [if IE 7]><haml:loud> stylesheet_link_tag 'ie7' </haml:loud><![endif]
    %script{ :type => "text/javascript", :charset => "utf-8" }
      AUTH_TOKEN = '<haml:loud> u(form_authenticity_token) </haml:loud>';
  %body
    .header
      .content
        %h1.siteTitle
          = link_to image_tag('logo.png'), root_path
        %ul.globalNav
          - if logged_in?
            %li.username
              Welcome Joe Doe
            - if current_user.admin?
              %li
                = link_to 'Admin Dashboard', admin_dashboard_path
          %li
            = link_to 'Root', root_path
    .shadow
      .subnav
        - if logged_in?
          %h2
            Test
          .navigation
            %ul
              %li
                = link_to 'Root', root_path
      .main
        = display_flash
        = yield
        .clear
    .footer
      .content
        %ul.nav
          %li
            = link_to 'Contact Us', '/contact_messages/new', :rel => "nofollow"
          %li
            = link_to 'Terms', '/pages/terms-of-use', :rel => "nofollow"
        %p.attribution
          Copyright
