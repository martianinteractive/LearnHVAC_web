=render "layouts/head"

%body.bp
  .header
    %h1.siteTitle
    %ul.global_nav
      - if logged_in?
        %li.username
          = link_to current_user.name, profile_path
        - if current_user.has_role?(:admin)
          %li
            = link_to 'Admin Site', admins_dashboard_path
        %li= link_to "Log-out", logout_path
      - else
        %li= link_to "Sign Up", signup_path
      
  .border
    &nbsp; 
  .main
    .dl10.navigation
      %h3 Community
      %ul
        %li
          = link_to "Dashboard", [:guests, :dashboard]
          = link_to "Directory", directory_path
        

    .fluid
      .content
        = display_flash
        = yield
        = render :partial => "layouts/connection" if @show_connection
