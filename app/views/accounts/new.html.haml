- content_for :head do
  - javascript_tag do
    :plain
      $(document).ready(function(){
        $(function() {
          $("#user_institution").autocomplete({
            source: "/colleges"
          });
        });
      });

%h2 
  Instructor Registration
%p Register to start using the LearnHVAC instructors website where you do things like create and manage scenarios, share scenarios with students.
%p You will receive an email confirmation after you submit this form.

- form_for @account, :url => { :controller => :accounts, :action => :create } do |f|
  = error_messages_for :account

  %fieldset
    %p
      = f.label :first_name, "First Name"

      = f.text_field :first_name
    %p
      = f.label :last_name, "Last Name"

      = f.text_field :last_name

  %fieldset
    %p
      = f.label :login

      = f.text_field :login
    %p
      = f.label :email, "Email address"

      = f.text_field :email
    %p
      = f.label :password

      = f.password_field :password, :size=>20,  :value=>""
    %p
      = f.label :password_confirmation, "Password Confirmation"	

      = f.password_field :password_confirmation, :size=>20,  :value=>""
  
  %fieldset
    %p
      Enter the name of the institution you are a member of.
    %p
      = f.label :institution
      = f.text_field :institution


  = submit_tag "Create", :class=>'submitButton'
= link_to 'Back', "#"
