	<%= render(:partial=>"shared/header")%>
	
	<div id="navigation">
			
			<table border="0" cellspacing="0" cellpadding="0">
			<tr>
			<td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
			<td><a href="/scenarios"><img src="/images/btn_scenarios_live.png" alt="Add/Modify Scenarios" border="0"/></a></td>
