= content_for :main_header do
  %h1= @group.name
  %p Lead by #{@group.creator.name}

%h3 Scenarios
- if @group.group_scenarios.empty?
  %p There are no scenarios on this group.
- else
  %table.zebra-striped
    %thead
      %tr
        %th Name
        %th Variables
        %th Created on
        %th Desktop Application
    %tbody
      - @group.scenarios.each do |scenario|
        %tr
          %td= scenario.name
          %td= scenario.variables.count
          %td= scenario.created_at.to_formatted_s(:long)
          %td
            - if scenario.client_version
              = link_to 'Download', scenario.client_version.url, :class => 'btn'
            - else
              Not available for  download
