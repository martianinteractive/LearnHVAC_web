#tabs
  %ul
    %li= link_to "Groups", students_groups_path
    
  #page_header
    #subject_info
      %h2= @group.name

  #inner_column
    %h3 Scenarios

    - if @group.group_scenarios.empty?
      %p There are no scenarios on this group.
    - else
      %table
        %thead
          %tr
            %th Name
            %th Variables
            %th Created on
        - @group.scenarios.each do |scenario|
          %tr
            %td= link_to scenario.name, "#"
            %td= scenario.variables.count
            %td= scenario.created_at.to_formatted_s(:long)

