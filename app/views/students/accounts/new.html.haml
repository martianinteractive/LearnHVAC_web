- content_for :head do
  - javascript_tag do
    $(document).ready(function() { $("#code").val("#{params[:code]}"); });

= error_messages_for :account

%h2 
  Student Registration

%p 
  Already a member? please
  = link_to "login", login_path
- form_for @account, :url => { :controller => "students/accounts", :action => "create" } do |f|
  .field
    = f.label :group_code, "Group code"
    = f.text_field :group_code

  .field
    = f.label :login
    = f.text_field :login

  .field
    = f.label :first_name, "First Name"
    = f.text_field :first_name

  .field
    = f.label :last_name, "Last Name"
    = f.text_field :last_name

  .field
    = f.label :email
    = f.text_field :email

  .field
    = f.label :password
    = f.password_field :password, :size=>20,  :value=>""

  .field
    = f.label :password_confirmation, "Password Confirmation"	
    = f.password_field :password_confirmation, :size=>20,  :value=>""

  .actions
    = submit_tag "Create", :class=>'submitButton'
    = link_to 'Back', "#"
