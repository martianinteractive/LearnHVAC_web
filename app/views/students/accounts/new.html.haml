- content_for :head do
  - javascript_tag do
    $(document).ready(function() { $("#code").val("#{params[:code]}"); });

= error_messages_for :account

%h2 
  Student Registration

%p 
  Already a member? please
  = link_to "login", login_path
- form_for @account, :url => { :controller => "students/accounts", :action => "create" } do |f|
  %p
    = f.label :code, "*Group code"
    %br
    = text_field_tag :code
  %p
    = f.label :login
    %br
    = f.text_field :login
  %p
    = f.label :first_name, "First Name"
    %br
    = f.text_field :first_name
  %p
    = f.label :last_name, "Last Name"
    %br
    = f.text_field :last_name
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :password
    %br
    = f.password_field :password, :size=>20,  :value=>""
  %p
    = f.label :password_confirmation, "Password Confirmation"	
    %br
    = f.password_field :password_confirmation, :size=>20,  :value=>""

  = submit_tag "Create", :class=>'submitButton'
= link_to 'Back', "#"
