<h1>Listing institutions</h1>

<table width="100%"   cellpadding="2" cellspacing="0" >
  <tr>
    <th align="left">Name</th>
    <th align="left">User Count</th>

  </tr>

<% rowClass = "lightRow"%>

<% for institution in @institutions %>

<%
 if rowClass == "lightRow"
        rowClass = "darkRow"
    else
        rowClass = "lightRow"
    end
%>
  <tr class="<%= rowClass %>">
    <td><%=h institution.name %></td>
	<td>
		<%= User.count :conditions=>{:institution_id => institution.id} %>
	</td>

    <td width="75"><%= link_to 'Show', institution %></td>
    <td width="75"><%= link_to 'Edit', edit_institution_path(institution) %></td>
    <td width="75"><%= link_to 'Destroy', institution, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New institution', new_institution_path %>
