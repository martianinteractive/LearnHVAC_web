= content_for :main_header do
  %h1 Shared Scenarios

%table.zebra-striped
  %thead
    %tr
      %th Name
      %th Master Scenario
      %th Created on
      %th Desktop Application
      %th
  - @scenarios.each do |scenario|
    %tr
      %td= link_to scenario.name, instructors_scenario_path(scenario)
      %td
        - if scenario.master_scenario
          = scenario.master_scenario.name
        - else
          %em deleted
      %td= scenario.created_at.to_formatted_s(:long)
      %td
        - if scenario.client_version
          = link_to scenario.client_version.url, :class => 'btn'
        - else
          Not available for  download
      %td= link_to 'Clone', instructors_shared_scenario_clone_path(scenario), :class => 'btn success'
