= content_for :main_header do
  %h1= @group.name
  %h4 Edit

= render :partial => 'group_menu'

= form_for(@group, :url => instructors_class_path(@group)) do |f|
  = render :partial => "form", :locals => {:f => f}
  .actions
    = f.submit 'Update', :class => 'btn primary'
    or
    = link_to 'Cancel', instructors_class_path(@group), :class => 'btn'
