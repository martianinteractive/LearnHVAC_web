= content_for :main_header do
  %h1= @scenario_variable.name

= render :partial => "instructors/scenarios/scenario_menu"

= form_for([@scenario, @scenario_variable], :url => instructors_scenario_variable_path(@scenario, @scenario_variable), :method => :put) do |f|
  %fieldset
    = render :partial => "form", :locals => { :f => f }
    .actions
      = f.submit 'Update', :class => 'btn primary'
      or
      = link_to 'Cancel', :back, :class => 'btn'
