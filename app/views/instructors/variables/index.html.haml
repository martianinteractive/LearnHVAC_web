#tabs
  %ul
    %li.ui-tabs-selected= link_to "Scenarios", instructors_scenarios_path
    %li= link_to "New Scenario", new_instructors_scenario_path

  = render :partial => "instructors/scenarios/scenario_menu"

  %br
  %table.listing
    %thead
      %tr
        = sort_header_tag('index', :title => 'Index')
        = sort_header_tag('component_code', :title => 'Component')
        = sort_header_tag('name', :title => 'Name')
        = sort_header_tag('io_type', :title => 'Type')
        %th Low
        %th Initial
        %th High
        %th 
    - @scenario_variables.each do |variable|
      %tr
        %td= variable.index
        %td= variable.component
        %td= link_to variable.name, instructors_scenario_variable_path(@scenario, variable)
        %td= variable.io_type.to_s.upcase
        %td= variable.low_value
        %td= variable.initial_value
        %td= variable.high_value
        %td
          = link_to image_tag('edit.gif'), edit_instructors_scenario_variable_path(@scenario, variable)
          &nbsp;&nbsp;
          = link_to image_tag('trashcan.gif'), instructors_scenario_variable_path(@scenario, variable), :confirm => 'Are you sure?', :method => :delete

  %br
  = will_paginate @scenario_variables
