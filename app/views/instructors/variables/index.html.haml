- content_for :js_templates do
  = render :partial => "shared/variables_js"

#tabs
  %ul
    %li.ui-tabs-selected= link_to "Scenarios", instructors_scenarios_path
    %li= link_to "New Scenario", new_instructors_scenario_path

  = render :partial => "instructors/scenarios/scenario_menu"
  %br
  
  - form_tag([:instructors, @scenario, :variables], :method => :get, :class => "variables") do
    %table.listing
      %thead
        %tr
          %th.select_all
            = check_box_tag "select_all"
            %label{:for => "select_all"} All
          = sort_header_tag('index', :title => 'Index')
          %th
            = sort_header_tag('component_code', {:title => 'Component'}, false)
            = filter_select_for(:component_code, Variable::COMPONENTS.to_a.map(&:reverse))
          = sort_header_tag('name', :title => 'Name')
          %th
            Disabled
            = filter_select_for(:disabled, [true, false])
          %th 
            Type
            = filter_select_for(:io_type, Variable::IO_TYPES)
          %th
            Fault
            = filter_select_for(:is_fault, [true, false])
          %th
            = submit_tag "Filter", :name => "_filter"
            = submit_tag "Reset", :name => "reset"
      - @scenario_variables.each do |variable|
        %tr
          %td= check_box_tag "variables_ids[]", variable.id
          %td= variable.index
          %td= variable.component
          %td= link_to variable.name, instructors_scenario_variable_path(@scenario, variable)
          %td= variable.disabled?
          %td= variable.io_type.to_s.upcase
          %td= variable.is_fault?
          %td
            = link_to image_tag('edit.gif'), edit_instructors_scenario_variable_path(@scenario, variable)
            &nbsp;&nbsp;
            = link_to image_tag('trashcan.gif'), instructors_scenario_variable_path(@scenario, variable), :confirm => 'Are you sure?', :method => :delete
      %tr
        %td
          = submit_tag "Enable", :name => "enable"
          = submit_tag "Disable", :name => "disable"

  %br
  = will_paginate @scenario_variables, :params => params.slice(:filter)
